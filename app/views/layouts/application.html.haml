!!!
%html
  %head
    %title= t('project_name')
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport"}/
    %meta{content: "", name: "description"}/
    %meta{content: "", name: "author"}/
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
  %body
    = render 'layouts/header'
    = render partial: "layouts/flash_messages", flash: flash
    #loading-page{style: "width:100%;height: 100%;position: absolute; z-index:-5000;"}
      = image_tag('ajax-loader.gif', {:class => "img-responsive", :style => "margin: 0 auto;top:200px;position:relative;", :alt => 'loading'})
    #primary-content
      = yield
      = render 'layouts/footer'
